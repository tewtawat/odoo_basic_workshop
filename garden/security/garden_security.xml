<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_garden" model="ir.module.category">
            <field name="name">Garden</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_garden_user" model="res.groups">
            <field name="name">Garden User</field>
            <field name="category_id" ref="garden.module_garden"/>
        </record>

        <record id="group_garden_manager" model="res.groups">
            <field name="name">Garden Manager</field>
            <field name="category_id" ref="garden.module_garden"/>
            <field name="implied_ids"
                   eval="[(4, ref('garden.group_garden_user'))]"/>
        </record>

        <record id="plot_rule_user" model="ir.rule">
            <field name="name">Plot User Rule</field>
            <field name="model_id" ref="model_plot"/>
            <field name="groups" eval="[(4, ref('garden.group_garden_user'))]"/>
            <field name="domain_force">[('gardener_ids', 'in', user.partner_id.id)]</field>
        </record>

        <record id="plot_rule_manager" model="ir.rule">
            <field name="name">Plot Manager Rule</field>
            <field name="model_id" ref="model_plot"/>
            <field name="groups" eval="[(4, ref('garden.group_garden_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>
