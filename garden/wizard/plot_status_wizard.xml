<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_plot_status_wizard" model="ir.ui.view">
        <field name="name">plot.status.wizard</field>
        <field name="model">plot.status.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Set Status">
                <sheet>
                    <group>
                        <group col="2">
                            <field name="plot_id" readonly="1"/>
                        </group>

                        <field name="wiz_slot_ids">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="slot_id" readonly="1"/>
                                <field name="is_blue"/>
                                <field name="is_yellow"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Save" name="button_setstatus"
                                class="btn-primary" type="object"/>
                        <button string="Cancel" special="cancel"
                                class="btn-default" type="object"/>
                    </footer>
                </sheet>

            </form>
        </field>
    </record>

    <act_window id="action_plot_status_wizard"
                name="Plot Status Wizard"
                res_model="plot.status.wizard"
                view_mode="form"
                view_id="garden.view_plot_status_wizard"
                context=""
                target="new"
    />

</odoo>
