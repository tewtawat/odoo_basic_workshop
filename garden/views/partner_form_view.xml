<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="gardener_form_view" model="ir.ui.view">
        <field name="name">gardener.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="is_gardener"/>
            </field>

            <xpath expr="//notebook">
                <page string="Gardener">
                    <sheet>
                        <field name="plot_ids">
                            <tree string="Plot list">
                                <field name="name"/>
                                <field name="is_organic"/>
                                <field name="slot_count"/>
                                <field name="cycle_count"/>
                            </tree>
                        </field>
                    </sheet>
                </page>
            </xpath>
        </field>
    </record>
    <menuitem id="menu_garden_management"
              name="Management"
              parent="parent_menu_garden"
              groups="garden.group_garden_manager"
    />

    <menuitem id="menu_management_gardener"
              name="Gardener"
              parent="menu_garden_management"
              action="contacts.action_contacts"
              groups="garden.group_garden_manager"
    />
</odoo>
